{
  "manifest_version": 2,
  "name": "CutUrl",
  "short_name": "CutUrl",
  "description": "Chrome Extension to shorten your url. Enables a new keyboard shortcut (Ctrl+Shift+C) to generate short url of the current tab.",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": ["assets/js/jquery.js", "assets/js/background.js"]
  },
  "permissions": [
    "*://*.googleapis.com/*",
    "notifications",
     "tabs"
  ],
  "icons": {
    "16": "assets/img/ico16.png",
    "48": "assets/img/ico48.png",
    "128": "assets/img/ico128.png"
  },
  "homepage_url": "http://github.com/idnan",
  "commands": {
    "toggle-pin": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "windows": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C",
        "chromeos": "Ctrl+Shift+C",
        "linux": "Ctrl+Shift+C"
      },
      "description": "Short your urls"
    }
  }
}
